<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gfix.biorelai2.MainActivity">

    <TextView
        android:id="@+id/textView_idCommande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Commande n° "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_nomAdherent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        app:layout_constraintLeft_toLeftOf="@id/textView_idCommande"
        app:layout_constraintTop_toBottomOf="@id/textView_idCommande" />


    <TextView
        android:id="@+id/textView_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Prénom "
        app:layout_constraintStart_toEndOf="@+id/textView_nomAdherent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_nomAdherent"/>


</ConstraintLayout>